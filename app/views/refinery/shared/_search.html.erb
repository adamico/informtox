<%= form_tag refinery.search_path, class: "navbar-search pull-right" do -%>
  <%= text_field_tag :query, {}, {:type => "search",
                     :placeholder => "Rechercher",
                     :class => "search-query span2",
                     :value => (params[:query] if params[:query])} %>
  <%= submit_tag 'OK', class: "btn" %>
<% end %>
